{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb-base"],

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "quotes": [2, "single", { "avoidEscape": true }],
    "no-param-reassign": ["error", { "props": false }]
  }
}
